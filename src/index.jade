        section.home__contacto#contacto
            .home__contacto__colon
                img(src="/images/comilla-footer.png")
            .container
                .row
                    .col-24.col-md-12
                        .home__contacto__heading
                            h2.home__contacto__title contacto
                        .home__contacto__content
                            a.home__contacto__link(href="mailto:info@zonamixta.com.ar" target="_blank") info@zonamixta.com.ar
                            ul.home__contacto__social
                                li.home__contacto__item
                                    a(href="https://twitter.com/ZonaMixtaPress?s=20" target="_blank")
                                        i.fa.fa-twitter
                                        p @zonamixtapress
                                li.home__contacto__item
                                    a(href="#")
                                        i.fa.fa-facebook
                                        p /zonamixtapress
                            a.home__contacto__link(href="http://www.zonamixta.com.ar" target="_blank") www.zonamixta.com.ar
                            p.home__contacto__text Avenida Caseros 781 1ro. B<br>CP C1152AAD<br><br>Ciudad Autónoma de Buenos Aires

                    .col-24.col-md-12
                        .home__contacto__heading.home__contacto__heading--logo
                            .home__contacto__logo
                                img(src="/images/logo.png")
                        form.home__contacto__form
                            input.home__contacto__input(placeholder="Nombre")
                            input.home__contacto__input(placeholder="Apellido")
                            input.home__contacto__input(placeholder="Correo")
                            textarea.home__contacto__input.home__contacto__input--textarea(placeholder="Mensaje")
                            button.home__contacto__button enviar
